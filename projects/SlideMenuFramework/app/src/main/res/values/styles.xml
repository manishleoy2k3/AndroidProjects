<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
         <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="navigation_label_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="navigation_count_style">
        <item name="android:textColor">#ff0011</item>
        <item name="android:background">@drawable/counter_bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_seperate_style" >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
