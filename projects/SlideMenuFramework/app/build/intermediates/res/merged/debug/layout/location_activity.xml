<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitudeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Update Location"
        android:id="@+id/start_updates_button"
        android:layout_below="@+id/latitudeView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="startUpdatesButtonHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Location Update"
        android:id="@+id/stop_updates_button"
        android:layout_below="@+id/start_updates_button"
        android:layout_alignLeft="@+id/start_updates_button"
        android:layout_alignStart="@+id/start_updates_button"
        android:onClick="stopUpdatesButtonHandler"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/longitudeView"
        android:layout_below="@+id/latitudeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/last_update_time_text"
        android:layout_below="@+id/longitudeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
